<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="mail_notification_paynow_inherit" inherit_id="mail.mail_notification_paynow">
        <xpath expr="//table[1]/tr[2]/td[@align='center']" position="replace">
            <t t-if="hasattr(company, 'mail_powered_by') and company.mail_powered_by or False">
                <td align="center" style="min-width: 590px;">
                    <p>Powered by <a target="_blank" t-att-href="company.website" style="color: #875A7B;"><t
                            t-esc="'%s' % company.name"/></a></p>
                </td>
            </t>
        </xpath>
    </template>

    <template id="mail_notification_borders_inherit" inherit_id="mail.mail_notification_borders">
        <xpath expr="//div/table/tbody/tr[4]/td[@align='center']" position="replace">
            <t t-if="hasattr(company, 'mail_powered_by') and company.mail_powered_by or False">
                <td align="center" style="min-width: 590px;">
                    <p>Powered by <a target="_blank" t-att-href="'%r'%company.website" style="color: #875A7B;"><t
                            t-esc="'%s' % company.name"/></a></p>
                </td>
            </t>
        </xpath>
    </template>

    <template id="mail_notification_light_inherit" inherit_id="mail.mail_notification_light">
        <xpath expr="//table/tr[2]/td[@align='center']" position="replace">
            <t t-if="hasattr(company, 'mail_powered_by') and company.mail_powered_by or False">
                <td align="center" style="min-width: 590px;">
                    <p>Powered by <a target="_blank" t-att-href="'%r'%company.website" style="color: #875A7B;"><t
                            t-esc="'%s' % company.name"/></a></p>
                </td>
            </t>
        </xpath>
    </template>


</odoo>